{
  "compileOnSave": false,
  "compilerOptions": {
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "lib": [
      "es2016",
      "dom"
    ],
    "module": "es2020",
    "baseUrl": "./"
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true
  },
  "exclude": [
    "node_modules",
    "src/test.ts",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
